@using MudBlazor
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager

<MudNavMenu>
    <MudNavLink Icon="@Icons.Material.Filled.Home" Href="" Match="NavLinkMatch.All">Home</MudNavLink>

    <CascadingAuthenticationState>
        <AuthorizeView>
            <Authorized>
                <MudNavLink Icon="@Icons.Material.Filled.List" Href="categoryoverview">Categories</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.AddBox" Href="addcategory">Add Category</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.ListAlt" Href="addressoverview">Addresses</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.AddLocation" Href="addaddress">Add Address</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.ShoppingCart" Href="productoverview">Products</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.AddShoppingCart" Href="addproduct">Add Product</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.ShoppingBasket" Href="orderoverview">Orders</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.ShoppingCartCheckout" Href="addorder">Add Order</MudNavLink>
            </Authorized>
        </AuthorizeView>
    </CascadingAuthenticationState>
</MudNavMenu>
